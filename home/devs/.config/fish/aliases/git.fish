# show diff for staged files
abbr --add gds "git diff --staged"
# commit staged files
abbr --add gcm "git commit -m"
# display status
abbr --add gs "git status"
# display logs
abbr --add gl "git log"
# staged a file
abbr --add ga "git add"
# amend a commit
abbr --add gam "git commit --amend"
# staged all changed files
abbr --add gaa "git add ."
# show current and all branches
abbr --add gb "git branch -a"
# remove a branch
abbr --add gbd "git branch -d"
# change working branch
abbr --add gc "git checkout"
# create and checkout a branch
abbr --add gcn "git checkout -b"
# merge a branch
abbr --add gm "git merge"
# fix last commit msg
abbr --add gf "git log --follow --"
# unstage staged files
abbr --add gu "git reset HEAD --"
# reset a file to last commit
abbr --add grh "git reset --hard"
# get changes from git
abbr --add gpull "git pull origin"
# send commits to git
abbr --add gpush "git push origin"
